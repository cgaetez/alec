<h1>Listing answers</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Homework</th>
      <th>Page</th>
      <th>Content</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.student %></td>
        <td><%= answer.homework %></td>
        <td><%= answer.page %></td>
        <td><%= answer.content %></td>
        <td><%= answer.status %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path %>
